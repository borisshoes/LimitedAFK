{
  "schemaVersion": 1,
  "id": "limitedafk",
  "version": "${version}",
  "name": "LimitedAFK",
  "description": "Limit how much time players can AFK on your server.",
  "authors": [
    "BorisShoes"
  ],
  "contact": {
    "repo": "https://github.com/borisshoes/LimitedAFK"
  },
  "license": "OSL-3.0",
  "icon": "assets/limitedafk/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.borisshoes.limitedafk.LimitedAFK"
    ],
    "cardinal-components-entity": [
      "net.borisshoes.limitedafk.cca.PlayerComponentInitializer"
    ]
  },
  "custom": {
    "cardinal-components": ["limitedafk:profile"]
  },
  "mixins": [
    "limitedafk.mixins.json"
  ],
  "accessWidener" : "limitedafk.accesswidener",
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": ">=${minecraft_version}"
  }
}
